<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
   
    
    <RelativeLayout 
        android:layout_width="match_parent"
    	android:layout_height="50dp"
        android:background="#333"
        >
        
        <TextView 
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:textSize="18sp"
    		android:gravity="center"
    		android:layout_centerInParent="true"
    		android:textColor="#fff"
    		android:ellipsize="end"
    		android:text="xmusicplayer"
            android:id="@+id/simple_music_list_textview_playingmusicname"
            />
        

        <ImageButton 
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_alignParentRight="true"
    		android:layout_marginRight="10dp"
    		android:background="@drawable/pop_menu_generic"
    		android:layout_centerVertical="true"
    		android:id="@+id/simple_music_list_btn_menu"
            
            />

    </RelativeLayout>
    
    <ListView 
        android:id="@+id/simple_music_list_listview"
        android:layout_width="match_parent"
		android:layout_height="585dp"
		android:background="#fff"        
        ></ListView>


    
    
</LinearLayout>
