<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    

       <TextView 
        android:id="@+id/simple_music_player_textview_singer_song"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:gravity="center"
        />

   <com.util.LrcView 
       android:id="@+id/simple_music_player_lrctextview"
       android:layout_width="match_parent"
       android:layout_height="500dp"
       android:gravity="center"
       />
    
    
    <SeekBar 
        android:id="@+id/simple_music_player_seekbar"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:max="100"
        android:layout_gravity="center"
        />
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:layout_gravity="center"
        >
        
       
        <Button 
        	android:id="@+id/simple_music_player_btn_pre"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
            android:text="前一首"
            android:textSize="12sp"
            />
        
       <Button 
        	android:id="@+id/simple_music_player_btn_pause_or_play"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
            android:text="暂停"
            android:textSize="12sp"
            />
      
       
        <Button 
        	android:id="@+id/simple_music_player_btn_next"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
            android:text="后一首"
            android:textSize="12sp"
            />
       
      <Button 
        	android:id="@+id/simple_music_player_btn_loop"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
            android:text="顺序播放"
            android:textSize="12sp"
            />

        
    </LinearLayout>
    
</LinearLayout>
